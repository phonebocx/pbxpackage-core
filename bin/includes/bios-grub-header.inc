# This is the bios-grub-header.inc from core/install

set default=__DEFAULT__
set timeout=__TIMEOUT__

# __THEMESRC__
set alttheme=/boot/grub/theme/alt-theme-bios.cfg
set themesrc=/boot/grub/theme/grub-theme-bios.cfg

insmod all_video
insmod png

set gfxmode=1024x768
set gfxpayload=keep

loadfont unicode

terminal_output gfxterm

set color_normal=light-gray/black
set color_highlight=white/black

if [ -f $alttheme ]; then
  source $alttheme
elif [ -f $themesrc ]; then
  source $themesrc
else
  echo $themesrc and $alttheme do not exist
  sleep 5
fi

search -l --no-floppy --set=efibase EFI
if [ -f ($efibase)/override.cfg ]; then
  source ($efibase)/override.cfg
fi

